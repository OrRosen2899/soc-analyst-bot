# SOC Analyst Bot Configuration File
# Copy this file to .env and fill in your values

# ===========================================
# REQUIRED: Telegram Bot Configuration
# ===========================================

# Get this token from @BotFather on Telegram
# Example: 123456789:ABCdefGHIjklMNOpqrsTUVwxyz
TELEGRAM_BOT_TOKEN=

# ===========================================
# OPTIONAL: Access Control
# ===========================================

# Comma-separated list of authorized Telegram user IDs
# Get your ID from @userinfobot on Telegram
# Leave empty to allow all users (NOT recommended)
# Example: 123456789,987654321,555666777
AUTHORIZED_USERS=

# ===========================================
# OPTIONAL: Threat Intelligence APIs
# ===========================================

# VirusTotal API Key (FREE)
# Sign up at: https://www.virustotal.com/gui/join-us
# Free tier: 4 requests per minute
# Provides: File, URL, IP, and hash analysis
VIRUSTOTAL_API_KEY=

# AbuseIPDB API Key (FREE)  
# Sign up at: https://www.abuseipdb.com/register
# Free tier: 1000 requests per day
# Provides: IP reputation and geolocation data
ABUSEIPDB_API_KEY=

# ===========================================
# ADVANCED: AI Model Configuration
# ===========================================

# Ollama model to use for analysis
# Options: llama3.2:1b (fast, less memory), llama3.2:3b (slower, better)
# Default: llama3.2:1b (recommended for Raspberry Pi 4)
OLLAMA_MODEL=llama3.2:1b

# Ollama service URL
# Default: http://localhost:11434 (don't change unless you know what you're doing)
OLLAMA_BASE_URL=http://localhost:11434

# ===========================================
# ADVANCED: Analysis Settings
# ===========================================

# Maximum file size to analyze (in bytes)
# Default: 50MB (52428800 bytes)
MAX_FILE_SIZE=52428800

# Analysis timeout (in seconds)
# How long to wait for analysis before giving up
# Default: 300 seconds (5 minutes)
ANALYSIS_TIMEOUT=300

# Enable debug logging (true/false)
# Set to true only for troubleshooting
DEBUG_LOGGING=false

