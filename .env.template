# SOC Analyst Bot Configuration
# =============================================================================

# REQUIRED: Your Telegram Bot Token from @BotFather
TELEGRAM_BOT_TOKEN=YOUR_ACTUAL_TOKEN_HERE

# RECOMMENDED: Your Telegram User ID for security (get from @userinfobot)
# Leave empty to allow anyone, or add comma-separated IDs: 123456789,987654321
AUTHORIZED_USERS=

# OPTIONAL: API Keys for Enhanced Threat Intelligence
# Get free API key from: https://www.virustotal.com/gui/join-us
VIRUSTOTAL_API_KEY=

# Get free API key from: https://www.abuseipdb.com/register  
ABUSEIPDB_API_KEY=

# =============================================================================
# System Configuration (Usually Don't Need to Change)
# =============================================================================
# Dont chane the URL!!
# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2:1b

# Logging Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Maximum file size for analysis (in MB)
MAX_FILE_SIZE_MB=50

# ===========================================
# ADVANCED: Analysis Settings
# ===========================================

# Maximum file size to analyze (in bytes)
# Default: 50MB (52428800 bytes)
MAX_FILE_SIZE=52428800

# Analysis timeout (in seconds)
# How long to wait for analysis before giving up
# Default: 300 seconds (5 minutes)
ANALYSIS_TIMEOUT=300

# Enable debug logging (true/false)
# Set to true only for troubleshooting
DEBUG_LOGGING=false

