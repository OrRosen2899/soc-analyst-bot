# SOC AI Agent Configuration
# Copy this file to .env and fill in your values

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# API Keys for Threat Intelligence
VIRUSTOTAL_API_KEY=your_virustotal_api_key_here
ABUSEDB_API_KEY=your_abuseipdb_api_key_here

# Ollama Configuration
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# Database Configuration
DATABASE_PATH=soc_agent.db

# Security Configuration
# Comma-separated list of allowed Telegram user IDs (leave empty to allow all)
# Get your user ID by messaging @userinfobot on Telegram
ALLOWED_USER_IDS=123456789,987654321

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=soc_agent.log

# Performance Settings for Raspberry Pi
MAX_CONCURRENT_REQUESTS=2
REQUEST_TIMEOUT=30
CACHE_TTL=3600
